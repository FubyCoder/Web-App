#!/bin/sh -ex

REPO="https://raw.githubusercontent.com/Raid-Hub/RaidHub-Destiny-Definitions/main/lib"
DEFINITIONS="src/util/destiny-definitions"

EMBLEMS="/emblems.json"
rm $DEFINITIONS$EMBLEMS
curl -o "$DEFINITIONS$EMBLEMS" "$REPO$EMBLEMS"

WEAPONS="/weapons.json"
rm $DEFINITIONS$WEAPONS
curl -o "$DEFINITIONS$WEAPONS" "$REPO$WEAPONS"

CLAN_BANNERS="/clanBanner.json"
rm $DEFINITIONS$CLAN_BANNERS
curl -o "$DEFINITIONS$CLAN_BANNERS" "$REPO$CLAN_BANNERS"

prettier --write $DEFINITIONS/*.json